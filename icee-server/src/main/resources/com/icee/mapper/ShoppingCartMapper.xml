<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.icee.mapper.ShoppingCartMapper">

    <select id="getByCart" resultType="com.icee.entity.ShoppingCart">
        select * from shopping_cart
        <where>
            and user_id =#{userId}
            <if test="setmealId != null">
                and setmeal_id = #{setmealId}
            </if>
            <if test="dishId != null">
                and dish_id = #{dishId}
            </if>
            <if test="dishFlavor != null and dishFlavor!=''">
                and dish_flavor = #{dishFlavor}
            </if>
        </where>
    </select>
    <select id="getByDish" resultType="com.icee.entity.ShoppingCart">
            select * from shopping_cart
            <where>
                and user_id = #{userId}
                <if test="dishId!=null">
                    and dish_id = #{dishId}
                </if>
                <if test="dishFlavor!=null and dishFlavor!=''">
                    and dish_flavor = #{dishFlavor}
                </if>
            </where>
    </select>
</mapper>
